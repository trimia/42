#include <unistd.h>
void	ft_rev_int_tab(int *tab, int size)
{
	int	i;
	int j;
	char	b;
	int box[size];

	i = 0;
	j = 0;
	while (i <size)
		{
			tab[i]=box[j];
			i++;
			j--;
			b = box [j]+ '0';
			write (1,&b,1);
		}
}
